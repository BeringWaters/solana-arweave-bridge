{
  "name": "solana_arweave_bridge",
  "version": "0.0.1",
  "description": "This utility is a bridge to connect Solana ledger data to Arweave permanent storage",
  "bin": {
    "solana-arweave-bridge": "./cli.js"
  },
  "main": "./dist/index.js",
  "license": "Apache-2.0",
  "scripts": {
    "start": "yarn build && node -e 'require(\"./dist/solanaTransactions.js\").start()'",
    "start:dev": "ts-node -e 'require(\"./src/solanaTransactions.ts\").start()'",
    "build": "tsc --outDir dist",
    "lint": "eslint src/** --no-error-on-unmatched-pattern --fix",
    "test": "mocha --exit --require ts-node/register test/**/*.ts",
    "coverage": "nyc npm run test"
  },
  "dependencies": {
    "@solana/web3.js": "^0.71.6",
    "arql-ops": "^1.0.0",
    "arweave": "^1.9.1",
    "axios": "^0.20.0",
    "bullmq": "^1.9.0",
    "commander": "^6.0.0",
    "dotenv": "^8.2.0",
    "fs-jetpack": "^3.1.0",
    "ioredis": "^4.17.3",
    "moment": "^2.27.0",
    "msgpack-lite": "^0.1.26",
    "node-fetch": "^2.6.0",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.13",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.7",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "chai": "4.2.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "6.2.0",
    "nyc": "14.1.1",
    "ts-node": "^9.0.0"
  }
}
